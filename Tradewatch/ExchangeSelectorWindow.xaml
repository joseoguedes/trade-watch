<Window x:Class="Tradewatch.ExchangeSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Exchanges"
        Height="450" Width="400"
        Background="#111111"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        MinHeight="300"
        MinWidth="350">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- SCROLLABLE EXCHANGE LIST -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ExchangeList" />
        </ScrollViewer>

        <!-- BOTTOM BUTTONS -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            
            <Button Content="Add all"
                    Width="80"
                    Margin="5"
                    Click="SelectAll_Click"
                    Background="#333"
                    Foreground="White" />
            
            <Button Content="Remove all"
                    Width="90"
                    Margin="5"
                    Click="ClearAll_Click"
                    Background="#333"
                    Foreground="White" />
            
            <Button Content="Cancel"
                    Width="80"
                    Margin="5"
                    Click="Cancel_Click"
                    Background="#333"
                    Foreground="White" />

            <Button Content="Save"
                    Width="80"
                    Margin="5"
                    Click="Save_Click"
                    Background="#0E4E4A"
                    Foreground="White"
                    FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>